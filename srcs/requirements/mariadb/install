apk update
apk upgrade
apk add mariadb mariadb-common mariadb-client
/etc/init.d/mariadb setup	=>  initialize the main mysql database,
								and data derictory as standarized to
								/var/lib/mysql
rc-service mariadb start	=>	start mariadb
rc-update add mariadb default =>	set the service to be started at system boot.
rc-status default		=>	Check service status with rc-status command:
mysql_secure_installation	=> secure mariadb 
	all (y) set root password, remove test database and disallow remote login as root user.
mysql -u root -p	=> -p providing password
CREATE USER abdel-ke@localhost IDENTIFIED BY "1337@sh";	=>	Create a user and grant access to the database created.
GRANT ALL ON testdb.* TO abdel-ke@localhost;
FLUSH PRIVILEGES;
QUIT (from mariadb)
mysql -u abdel-ke -p'1337@sh'	=>	login to abdel-ke
SHOW DATABASES;





//
echo "CREATE USER 'abdel-ke'@'localhost' IDENTIFIED BY '1337@sh';" | mysql -u root
echo "CREATE DATABASE wordpress;" | mysql -u root
echo "GRANT ALL PRIVILEGES ON wordpress.* TO 'abdel-ke'@'localhost' IDENTIFIED BY '1337@sh';" | mysql -u root
echo "FLUSH PRIVILEGES;" | mysql -u root

echo "CREATE USER 'abdel-ke'@'%' IDENTIFIED BY '1337@sh';" | mysql -u root
echo "CREATE DATABASE wordpress;" | mysql -u root
echo "GRANT ALL PRIVILEGES ON wordpress.* TO 'abdel-ke'@'%' IDENTIFIED BY '1337@sh';" | mysql -u root
echo "FLUSH PRIVILEGES;" | mysql -u root

